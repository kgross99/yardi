<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    xmlns:tools="http://schemas.android.com/tools"

    <TextView
        android:id="@+id/list_item_game_team2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:layout_below="@id/list_item_game_title_text_view"
        android:text="Team 2"/>
    <TextView
        android:id="@+id/list_item_game_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_game_team2_score"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Game Name"/>
    <TextView
        android:id="@+id/list_item_game_team1_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_game_title_text_view"
        android:layout_toLeftOf="@id/list_item_game_score2_text_view"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="Team 1"/>


</RelativeLayout>